extends base

block content 
  if errorMessage
    span=errorMessage
  form(method="POST")
    input(name="username", type="text", required, placeholder="USER NAME")
    input(name="password", type="password", required, placeholder="PASSWORD")
    input(type="submit", value="Login")
    br
    a(href="https://github.com/login/oauth/authorize?client_id=a7e082389208011d4e67") Continue with Github &rarr;
  hr
  div 
    span  Don't have an account? 
    a(href="/join") Create one NOW &rarr;
